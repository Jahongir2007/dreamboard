<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up - DreamBoard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #141E30, #243B55);
      color: #fff;
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      margin: 0;
    }

    .auth-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      padding: 40px 30px;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .auth-card h3 {
      text-align: center;
      color: #FFD700;
      font-weight: 700;
      margin-bottom: 30px;
    }

    .form-control {
      background: rgba(255, 255, 255, 0.15);
      border: none;
      color: #fff;
      padding: 12px;
      font-size: 16px;
      border-radius: 10px;
    }

    .form-control::placeholder {
      color: #ccc;
    }

    .form-control:focus {
      background: rgba(255, 255, 255, 0.2);
      border-color: #FFD700;
      box-shadow: 0 0 8px rgba(255, 215, 0, 0.5);
      color: #fff;
    }

    .btn-custom {
      width: 100%;
      background-color: #FFD700;
      color: #222;
      font-weight: 600;
      border-radius: 30px;
      padding: 12px;
      transition: 0.3s;
    }

    .btn-custom:hover {
      background-color: #222;
      color: #ffca28;
    }

    .link-text {
      color: #FFD700;
      text-decoration: none;
    }

    .link-text:hover {
      text-decoration: underline;
    }

    @media (max-width: 480px) {
      .auth-card {
        padding: 30px 20px;
      }

      .auth-card h3 {
        font-size: 1.6rem;
      }
    }

  #alertBox {
    width: 100%;
    margin-top: 10px;
    text-align: center;
  }

  .alert {
    border-radius: 12px;
    font-weight: 500;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    padding: 12px 18px;
    animation: fadeIn 0.3s ease;
    max-width: 400px;
    margin: 0 auto;
    margin-bottom: 30px;
  }

  .alert-success {
    background-color: #d1e7dd;
    border-color: #badbcc;
    color: #0f5132;
  }

  .alert-warning {
    background-color: #fff3cd;
    border-color: #ffecb5;
    color: #664d03;
  }

  .alert-danger {
    background-color: #f8d7da;
    border-color: #f5c2c7;
    color: #842029;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  </style>
</head>
<body>
  <div class="auth-card">
    <h3>üéØ Sign Up</h3>
    <div id="alertBox"></div>
    <form id="sign-up">
      <input type="email" class="form-control mb-3" name="email" id="email" placeholder="Email" required>
      <input type="text" class="form-control mb-3" name="username" id="username" placeholder="Username" required>
      <input type="password" class="form-control mb-3" name="password" id="pass" placeholder="Password" required>
      <input type="password" class="form-control mb-3" name="password" id="re-pass" placeholder="Confirm password" required>
      <button id="signupBtn" class="btn btn-custom">
        <span id="signupText">Sign Up</span>
        <span id="signupSpinner" class="spinner-border spinner-border-sm ms-2 d-none"></span>
      </button>
    </form>
    <p class="text-center mt-3 mb-0">
      Already have an account? <a href="/login" class="link-text">Log In</a>
    </p>
  </div>
  <script>
    $(document).ready(function(){
      $("#sign-up").on('submit', function(e){
        e.preventDefault();

        const email = $("#email").val();
        const password = $("#pass").val();
        const repassword = $("#re-pass").val();
        const username = $("#username").val();

        $("#signupBtn").prop("disabled", true);
        $("#signupText").text("Processing...");
        $("#signupSpinner").removeClass("d-none");
        
        if(password == repassword){
          $.ajax({
            url: "/signup",
            method: "POST",
            contentType: "application/json",
            data: JSON.stringify({ email, password, username }),
            success: function(res) {
                let alertType = res.success ? "success" : "warning";
                let message = res.success
                  ? "üéâ Account created successfully! Please verify your email."
                  : "‚ö†Ô∏è " + res.message;

                $("#alertBox").html(`
                  <div class="alert alert-${alertType} alert-dismissible fade show mt-3" role="alert">
                    ${message}
                  </div>
                `);

                if (res.success) {
                  // ‚è≥ Wait a moment then redirect
                  setTimeout(() => {
                    window.location.href = `/verify-info?email=${encodeURIComponent(email)}`;  // üëà new page
                  }, 2000);
                }
            },
            error: function(err) {
              console.error(err);
              alert("‚ùå Server error, please try again later.");
            }
          });
        }else{
          $("#alertBox").html(`
            <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
              ‚ö†Ô∏è Password you've entered doesn't match with your second password
            </div>
          `);
        }
      })
    });
  </script>
</body>
</html>

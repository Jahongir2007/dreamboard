<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Verify Your Email - DreamBoard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #141E30, #243B55);
      color: #fff;
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      margin: 0;
    }

    .auth-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 15px;
      padding: 40px 30px;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
      text-align: center;
    }

    .auth-card h3 {
      color: #FFD700;
      font-weight: 700;
      margin-bottom: 30px;
    }

    .form-control {
      background: rgba(255, 255, 255, 0.15);
      border: none;
      color: #fff;
      padding: 12px;
      font-size: 16px;
      border-radius: 10px;
    }

    .form-control::placeholder {
      color: #ccc;
    }

    .form-control:focus {
      background: rgba(255, 255, 255, 0.2);
      border-color: #FFD700;
      box-shadow: 0 0 8px rgba(255, 215, 0, 0.5);
      color: #fff;
    }

    .btn-custom {
      width: 100%;
      background-color: #FFD700;
      color: #222;
      font-weight: 600;
      border-radius: 30px;
      padding: 12px;
      transition: 0.3s;
    }

    .btn-custom:hover {
      background-color: #222;
      color: #ffca28;
    }

    .link-text {
      color: #FFD700;
      text-decoration: none;
    }

    .link-text:hover {
      text-decoration: underline;
    }

    @media (max-width: 480px) {
      .auth-card {
        padding: 30px 20px;
      }

      .auth-card h3 {
        font-size: 1.6rem;
      }
    }

    #alertBox {
      width: 100%;
      margin-top: 10px;
      text-align: center;
    }

    .alert {
      border-radius: 12px;
      font-weight: 500;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      padding: 12px 18px;
      animation: fadeIn 0.3s ease;
      max-width: 400px;
      margin: 0 auto;
      margin-bottom: 20px;
    }

    .alert-success {
      background-color: #d1e7dd;
      border-color: #badbcc;
      color: #0f5132;
    }

    .alert-warning {
      background-color: #fff3cd;
      border-color: #ffecb5;
      color: #664d03;
    }

    .alert-danger {
      background-color: #f8d7da;
      border-color: #f5c2c7;
      color: #842029;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-8px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>

  <div class="auth-card">
    <h3>Verify Your Email</h3>
    <p>We’ve sent a verification code to your email: <strong><%= email %></strong></p>

    <div id="alertBox"></div>

    <form id="otpForm">
      <div class="mb-3 mt-3">
        <label for="otp" class="form-label">Enter OTP / Verification Code</label>
        <input type="text" class="form-control" id="otp" placeholder="123456" required>
      </div>
      <button type="submit" class="btn btn-custom">Verify Email</button>
    </form>

    <p class="small mt-3 text-white">
      Didn’t receive the email? <a href="#" id="resendLink" class="link-text">Resend</a>
    </p>

    <div class="mt-4">
      <a href="/login" class="link-text">← Back to Login</a>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script>
    $("#otpForm").on("submit", function(e) {
      e.preventDefault();
      const otp = $("#otp").val();

      $.ajax({
        url: "/verify-email",
        method: "POST",
        contentType: "application/json",
        data: JSON.stringify({ email: "<%= email %>", otp }),
        success: function(res) {
          let alertType = res.success ? "success" : "warning";
          let message = res.success ? "✅ Email verified successfully!" : "⚠️ " + res.message;

          $("#alertBox").html(`
            <div class="alert alert-${alertType} alert-dismissible fade show" role="alert">
              ${message}
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          `);

          if (res.success) {
            setTimeout(() => {
              window.location.href = "/feed";
            }, 2000);
          }
        },
        error: function() {
          $("#alertBox").html(`
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              ❌ Server error. Please try again later.
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          `);
        }
      });
    });

    $("#resendLink").on("click", function(e) {
      e.preventDefault();
      $.ajax({
        url: "/resend-verification",
        method: "POST",
        contentType: "application/json",
        data: JSON.stringify({ email: "<%= email %>"}),
        success: function(res) {
          let alertType = res.success ? "success" : "warning";
          $("#alertBox").html(`
            <div class="alert alert-${alertType} alert-dismissible fade show" role="alert">
              ${res.message}
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          `);
        }
      });
    });
  </script>

</body>
</html>